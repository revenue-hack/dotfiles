{
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "typescript.suggest.autoImports": true,
  "eslint.autoFixOnSave": true,
  "prettier.disableSuccessMessage": true,
  "tsserver.formatOnType": true,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "languageserver": {
    "dls": {
      "command": "diagnostic-languageserver",
      "args": ["--stdio", "--log-level", "2"],
      "filetypes": [ "go" ], // filetypes that you want to enable this lsp
      "initializationOptions": {
        "linters": {
          "command": "staticcheck",
          "rootPatterns": [],
          "debounce": 100,
          "args": [ "-fail", "checks"],
          "offsetLine": 0,
          "offsetColumn": 0,
          "sourceName": "staticcheck",
          "ignore": []
        },
        "filetypes": {
          "go": "staticcheck"
        },
        "formatters": {},
        "formatFiletypes": {}
      }
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "intelephense": {
      "command": "intelephense",
      "args": ["--stdio"],
      "filetypes": ["php"],
      "initializationOptions": {
        "storagePath": "/tmp/intelephense"
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    },
    "jedi": {
      "enable": true,
      "filetypes": ["python"],
      "startupMessage": false,
      "command": "~/.anyenv/envs/pyenv/shims/jedi-language-server"
    },
    "gopls": {
      "command": "gopls",
      "filetypes": ["go"],
      "diagnosticsDelay": 150
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    }
  }
}
