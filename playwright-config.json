{
  "browser": {
    "browserName": "chromium",
    "isolated": true,
    "userDataDir": "/tmp/playwright/profile",
    "launchOptions": {
      "channel": "chromium",
      "headless": false,
      "args": ["--no-sandbox", "--disable-setuid-sandbox", "--disable-dev-shm-usage"]
    },
    "contextOptions": {
      "viewport": {
        "width": 1920,
        "height": 1080
      },
      "locale": "ja-JP",
      "timezoneId": "Asia/Tokyo"
    }
  },
  "outputDir": "/tmp/playwright"
}

